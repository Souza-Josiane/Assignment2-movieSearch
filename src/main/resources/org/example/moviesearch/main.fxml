<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #D87A7A;" styleClass="background-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.moviesearch.MovieController">
   <children>
      <Label alignment="CENTER" layoutX="231.0" layoutY="14.0" text="MOVIE SEARCH" textAlignment="CENTER" textFill="#5e3535">
         <font>
            <Font name="Verdana Bold" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="movieTextField" alignment="CENTER" layoutX="175.0" layoutY="48.0" prefHeight="30.0" prefWidth="251.0" promptText="Enter a movie" style="-fx-background-color: #DFC0C0;">
         <font>
            <Font size="14.0" />
         </font></TextField>
      <Button fx:id="searchButton" alignment="CENTER" layoutX="260.0" layoutY="103.0" mnemonicParsing="false" onAction="#searchMovie" style="-fx-background-color: #BFA4A4;" text="Search" textFill="#5e3535">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
       <HBox alignment="CENTER" layoutX="0" layoutY="133.0" prefHeight="267.0" prefWidth="600.0">
         <children>
             <VBox fx:id="resultVBox" spacing="10">
               <children>
                  <Label fx:id="titleLabel" />
                  <Label fx:id="yearLabel" />
                  <Label fx:id="ratedLabel" />
                  <Label fx:id="runtimeLabel" />
                  <Label fx:id="genreLabel" />
                  <Label fx:id="directorLabel" />
                  <Label fx:id="plotLabel" wrapText="true" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <ImageView fx:id="posterImageView" fitHeight="250.0" fitWidth="201.0" pickOnBounds="true" preserveRatio="true" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
